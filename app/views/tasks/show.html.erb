<h3 class="text-center">Task details</h3><br/>

<div class="container container_edit">
  <div class="row">
  	<div class="col-sm-3"></div>
    <div class="col-md-6">

      <h4>
        Task title: 
        <%= @task.title %>
      </h4><hr>

      <h4>
        Description: 
        <%= @task.description %>
      </h4><hr>

      <h4>
        Priority: <%= @task.priority %>
      </h4><hr>

      <h4>
        Status: 
        <% if @task.completed %>
			Done
		<% else %>
			Undone
        <% end %>
      </h4><hr>

    </div>
  </div>
</div>