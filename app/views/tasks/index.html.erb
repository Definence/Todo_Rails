<div class="col-md-12">
  <h1>My tasks</h1>

  <div class="buffer_top">
    <%= link_to "New task", new_task_path, class: 'btn btn-primary' %>
  </div><br/>
  
  <div class="row">
    <p class="col-xs-5"><%=sortable 'Title' %></p>
    <p class="col-xs-2 text-center"><%=sortable 'Priority' %></p>
  </div><hr/>
   
    <% @tasks.each  do |task| %>
      <%= link_to  task_path(task) do  %>
        <%= render partial: 'task', object: task %>  
      <% end %>
    <% end %>

    <hr/>

    <% @completed_tasks.each  do |task| %>
      <%= link_to  task_path(task) do  %>
        <%= render partial: 'task', object: task %>
      <% end %>
    <% end %>

    <hr/>
    
</div>
