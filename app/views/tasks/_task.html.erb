<div class="task priority_<%= task.priority %> completed_<%= task.completed %>">

    <span class="title"><%= task.title %></span>
    
    <div class="icons">
		<%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_task_path(task), class: 'action' %>
		<%= link_to content_tag('span', '', class: 'fa fa-trash'), task, method: :delete, class: 'action' %>
		<%= link_to content_tag('span', '', class: 'fa fa-check-circle-o'), complete_task_path(task), data: {method: :put}, class: 'done action' %>
		<%= link_to content_tag('span', '', class: 'fa fa-reply'), uncomplete_task_path(task), data: {method: :put}, class: 'undone action' %>
	</div>
    
    <span class="sorting_priorities">
    	<%= task.priority %>
    </span>

</div>
